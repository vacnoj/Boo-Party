jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: 14

      - name: Use Firebase API Key
        env:
          FIREBASE_API_KEY: ${{ secrets.FIREBASE_KEY }}
        run: |
          # You can now access the secret as an environment variable
          echo "My Firebase API Key is: $FIREBASE_API_KEY"
          # Use the secret in your code, for example:
          # node your_script.js
